<h1>{{title}}</h1>
<p>Welcome to Random Worde generator </p>

<form action="/" method="post">

    <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name"  name="name" placeholder="Oliver Twist">
    </div>
    <div class="mb-3">
        <label for="email" class="form-label">Email address</label>
        <input type="email" class="form-control" id="email"  name="email" placeholder="name@example.com">
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
    <div class="mb-3">
        <button type="reset" class="btn btn-secondary">Generate a Random Word</button>
    </div>
<div>
    <a href="/users"><button  class="btn btn-primary">Go to users</button></a>
</div>


</form>

